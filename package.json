{
    "name": "com.ajm13.cordovavue",
    "displayName": "CordovaVue",
    "version": "1.0.0",
    "private": true,
    "author": {
        "name": "Alex McNerney",
        "url": "https://ajm13.com"
    },
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build --dest www; cordova build ios",
        "lint": "vue-cli-service lint"
    },
    "dependencies": {
        "cordova-ios": "4.5.5",
        "cordova-plugin-whitelist": "^1.3.3",
        "vue": "^2.5.17",
        "vue-router": "^3.0.1",
        "vuex": "^3.0.1"
    },
    "devDependencies": {
        "@vue/cli-plugin-babel": "^3.0.0",
        "@vue/cli-plugin-eslint": "^3.0.0",
        "@vue/cli-service": "^3.0.0",
        "@vue/eslint-config-prettier": "^3.0.3",
        "node-sass": "^4.9.0",
        "sass-loader": "^7.0.1",
        "vue-template-compiler": "^2.5.17"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "ios"
        ]
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "@vue/prettier"
        ],
        "rules": {},
        "parserOptions": {
            "parser": "babel-eslint"
        }
    },
    "prettier": {
        "semi": false,
        "singleQuote": true
    },
    "postcss": {
        "plugins": {
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not ie <= 8"
    ]
}
